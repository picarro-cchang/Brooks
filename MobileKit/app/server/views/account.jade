
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#account-form-container
	form( method="post")#account-form.form-horizontal.well.span6
		h1
		p#sub1.subheading Please tell us a little about yourself.
		hr
		fieldset
			#name-cg.control-group
				label.control-label(for='name-tf') Name
				.controls
					input#name-tf.input-xlarge(type='text', name='name', value= user.name)
			#email-cg.control-group
				label.control-label(for='email-tf') Email
				.controls
					input#email-tf.input-xlarge(type='text', name='email', value= user.email)
			#clist-cg.control-group
				label.control-label(for='country-list') Location
				.controls
					select#country-list(name='country')
						each item in countries
							option(selected=item.name == user.country)= item.name
			hr
			p#sub2.subheading Please fill out a bio, experiment info, and choose a password
			input(type='hidden', name='user', value= user.user)#userId
			#user-cg.control-group
				label.control-label(for='user-bio') Bio
				.controls
					input#user-bio.input-xlarge(type='textarea', name='bio', value= user.bio)
			#user-cg.control-group
				label.control-label(for='user-experiment') Experiment Description
				.controls
					input#user-experiment.input-xlarge(type='textarea', name='experimentInfo', value= user.experimentInfo)
			#pass-cg.control-group
				label.control-label(for='pass-tf') Password
				.controls
					input#pass-tf.input-xlarge(type='password', name='pass', value='')
			.form-actions
				button(type='button')#account-form-btn1.btn
				button(type='submit')#account-form-btn2.btn

			p#sub2.subheading Analyzers
			#pass-cg.control-group
				label.control-label(for='anz') Analyzer
				.controls
					input#anz.input-xlarge(type='anz', name='anz', value= user.anz)
			#user-cg.control-group
				label.control-label(for='anz-name') Analyzer Name
				.controls
					input#anz-name.input-xlarge.disabled(type='text', name='anz-name', value= user.anzName)
			#pass-cg.control-group
				label.control-label(for='anz-identity') Analyzer Identity
				.controls
					input#anz-identity.input-xlarge(type='anzIdentity', name='anz-identity', value= user.anzIdentity)
			.form-actions
				button(type='submit')#account-form-btn3.btn delete analyzer
				button(type='submit')#account-form-btn4.btn update
				button(type='submit')#account-form-btn5.btn new analyzer


// display form errors in a custom modal window //

include modals/form-errors
